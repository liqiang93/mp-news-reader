/* pages/mine/mine.wxss */

.head-portrait-layout {
  display: flex;
  flex-direction: column;
  box-shadow: 0 10px 40px -5px rgba(61, 75, 102, 0.10);
}

.head-portrait {
  display: flex;
  flex-direction: row;
  margin-left: 40rpx;
}

.task {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.head-portrait-location {
}

.head-portrait-size {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.tag {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #999;
  height: 60rpx;
}

.tag-layout {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  margin-left: 20rpx;
  align-items: center;
  margin-top: 15rpx;
}

.name-layout {
  display: flex;
  flex-direction: column;
}

.image-layout {
  margin-right: 20rpx;
}

.image-size-message {
  width: 40rpx;
  height: 45rpx;
}

.image-size-comment {
  width: 40rpx;
  height: 35rpx;
}

.image-size-shopping {
  width: 40rpx;
  height: 40rpx;
  margin-top: 3.5rpx;
}

.name {
  font-family: PingFangSC-Medium;
  font-size: 17px;
  color: #303133;
  letter-spacing: 0;
}

.detail {
  width: 40rpx;
  height: 40rpx;
}

.headline {
  font-family: PingFangSC-Medium;
  font-size: 15rpx;
  color: #000;
  letter-spacing: 0;
  text-align: center;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}

.headline-layout {
  display: flex;
  flex-direction: column;
  align-items:center;
}

.messageCenter {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  height: 80rpx;
  background: #fff;
  /* box-shadow: 0 10px 40px -5px rgba(61, 75, 102, 0.10); */
  align-items: center;
}

.message {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}

.center {
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.image-size {
  width: 40rpx;
  height: 40rpx;
}

.font {
  margin-left: 20rpx;
  font-size: 30rpx;
}

.record {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  background: #fff;
  box-shadow: 0 10px 40px -5px rgba(61, 75, 102, 0.10);
  align-items: center;
}

.records {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  background: #fff;
  box-shadow: 0 10px 40px -5px rgba(61, 75, 102, 0.10);
  align-items: center;
  margin-bottom: 50rpx;
}
