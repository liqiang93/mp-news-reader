/* pages/index/index.wxss */

.data {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  margin-left: 20rpx;
  margin-top: 17rpx;
}

.van-serch-width {
  width: 88%;
  float: right;
}

.data-service-line {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.swiper-layout {
  width: 97%;
  margin-left: 12rpx;
}

.swiper {
  height: 309rpx;
  width: 100%;
}

.swiper image {
  height: 100%;
  width: 100%;
}

.more-display {
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 80rpx;
  width: 100%;
  margin-top: 50rpx;
}

.more {
  width: 35rpx;
  height: 35rpx;
  margin-top: 5rpx;
}

.explore {
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  margin-left: 18rpx;
}

.title-layout {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 30rpx;
}

.title {
  font-size: 26rpx;
  height: 100rpx;
  width: 546rpx;
  font-family: PingFangSC-Medium;
}

.title-img {
  width: 180rpx;
  height: 150rpx;
}

.title-label {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #878d99;
  letter-spacing: 0;
  margin-top: 10rpx;
}

.title-font {
  display: flex;
  flex-direction: column;
}

.title-activities {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 30rpx;
}

.swiper-distance {
  height: 933rpx;
}

.video-layout {
  width: 100%;
}

.video-size {
  width: 100%;
  height: 425rpx;
}

.video-information {
  display: flex;
  background: #fff;
  padding-bottom: 10rpx;
  width: 750rpx;
  height: 90rpx;
  align-items: center;
}

.video-logo {
  width: 70rpx;
  height: 70rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.video-name {
  font-size: 25rpx;
  font-family: PingFangSC-Medium;
  color: #000;
  letter-spacing: 0;
}

.image-layout {
  display: flex;
  width: 221rpx;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.message-size {
  width: 36rpx;
  height: 36rpx;
}

.transmit-size {
  width: 28rpx;
  height: 28rpx;
}

.avatar-layout {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.weui-cell-third {
  background: #fff;
}

.weui-cell-list {
  background: #fff;
  margin: 5px 50px 5px 50px;
}

.weui-cell-line {
  /* width: 100px; */
  margin-left: 5px;
  border-left: 1px solid #ddd;
  background: #fff;
}

.weui-cell-circle {
  border: 1px solid #000;
  border-radius: 15px;
  width: 5px;
  height: 5px;
  border-color: #000;
  margin-left: 2px;
  margin-top: -5rpx;
}

.weui-cell-time {
  /* width: 50px; */
  float: left;
  font-size: 14px;
  margin-left: -46px;
  width: 72px;
  color:#999;
}

.weui-cell-event {
  padding-left: 15px;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #999;
}

.weui-cell-name {
  margin-left: -21rpx;
  font-size: 14px;
  height: 23px;
  display: inline-block;
  width: 465rpx;
  overflow: hidden; /*隐藏溢出的文本  */
  white-space: nowrap; /*不换行  */
  text-overflow: ellipsis;
}

.page__title {
  height: 65rpx;
  display: flex;
  align-items: center;
  background: #eee;
}

.page-title {
  font-family: PingFangSC-Medium;
  font-size: 34px;
  color: #000;
  margin-left: 15rpx;
}

.imagesize {
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.imagesize .image {
  width: 320rpx;
  height: 240rpx;
  margin-top: 30%;
}

.imagesize .no-attention {
  width: 128rpx;
  height: 45rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #b4bccc;
  letter-spacing: 0;
  text-align: center;
  margin-top: 8%;
}

