/* pages/find/find.wxss */

.imageSize {
  width: 97%;
  height: 309rpx;
}

.image-layout {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.article-layout {
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-radius: 10rpx;
  width: 93%;
  margin-left: 24rpx;
  margin-top: 50rpx;
  background: #fff;
  box-shadow: 0 10px 40px -5px rgba(61, 75, 102, 0.10);
}

.title {
  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  color: #303133;
  letter-spacing: 0;
  margin-top: 20rpx;
  margin-left: 20rpx;
  width: 95%;
  height: 120rpx;
}

.article-content {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #909399;
  letter-spacing: 0;
  margin-left: 20rpx;
  width: 95%;
}

.comment-layout {
  display: flex;
  flex-direction: column;
  background: #f0f2f5;
  margin-left: 50rpx;
  width: 89%;
  margin-top: 40rpx;
}

.comment {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #303133;
  letter-spacing: 0;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.name {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #909399;
  letter-spacing: 0;
  margin-left: 20rpx;
}

.image-layout {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  margin-top: 10rpx;
  margin-right: 3%;
}

.image-comment {
  width: 49rpx;
  height: 49rpx;
}

.image-edit {
  width: 80rpx;
  height: 80rpx;
}
